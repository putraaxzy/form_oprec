# PRODUCTION CONFIGURATION FOR HIGH TRAFFIC
# Copy this to .env and adjust values as needed

# Database Configuration (Optimized for High Load)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_secure_password
MYSQL_DATABASE=osis_recruitment
DB_CONNECTION_LIMIT=50
DB_SSL=false

# Server Configuration
NODE_ENV=production
PORT=3000

# Request Limits (Optimized for Performance)
JSON_LIMIT=5mb
URL_ENCODED_LIMIT=5mb

# Static File Caching
STATIC_MAX_AGE=30d
PUBLIC_MAX_AGE=7d

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# WhatsApp Integration (Optional)
WHATSAPP_API_KEY=your_whatsapp_key_here
WHATSAPP_API_URL=https://api.whatsapp.com

# Security Settings
SESSION_SECRET=your_very_secure_random_string_here
BCRYPT_ROUNDS=12

# Performance Tuning
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# File Upload Limits
MAX_FILE_SIZE=20971520
MAX_FILES_PER_REQUEST=20

# Rate Limiting (per hour)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# SSL/TLS (if using HTTPS)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/private-key.pem

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Settings
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
