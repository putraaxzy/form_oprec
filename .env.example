PORT=3000
NODE_ENV=development

# Database Configuration - MySQL Only
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=osis_recruitment
MYSQLDUMP_PATH=C:\laragon\bin\mysql\mysql-8.0.30-winx64\bin\mysqldump.exe # Example for Laragon on Windows. Update with your actual path.
# For Ubuntu/Linux, it's usually just 'mysqldump' if installed globally, or a path like '/usr/bin/mysqldump'

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Custom Domain (optional - if not set, will use localhost:PORT)
CUSTOM_DOMAIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=3

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
